---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageLayout from '../layouts/PageLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
---

<PageLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <Fragment slot="header">
    <Header />
  </Fragment>

  <div class="flex-auto py-6 px-4 md:px-0">
    <section class="py-10">
      <div class="container max-w-screen-md px-4 mx-auto">
        <div class="flex flex-col items-center justify-center gap-y-8">
          <img class="w-1/4 h-1/4 rounded-full" src="/404.png" />

          <h2 class="text-7xl font-bold">404</h2>
          <p class="text-center">頁面不存在</p>
        </div>
      </div>
    </section>
  </div>

  <Fragment slot="footer">
    <Footer />
  </Fragment>
</PageLayout>
