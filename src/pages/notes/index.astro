---
import { getCollection } from 'astro:content';
import { compareDesc, format } from 'date-fns';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import Porse from '../../components/Porse.astro';
import Profile from '../../components/Profile.astro';
import Tag from '../../components/Tag.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../config';
import PageLayout from '../../layouts/PageLayout.astro';

const notes = await getCollection('notes').then((notes) =>
  notes
    .filter(({ data }) => !data.draft)
    .sort((a, b) => compareDesc(a.data.pubDate, b.data.pubDate))
);

const lastThreeNotes = await Promise.all(
  notes.slice(0, 3).map((note) => note.render().then(({ Content }) => ({ Content, ...note })))
);

const restNotes = notes.slice(3);
---

<PageLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <Fragment slot="other-head">
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.0/dist/katex.min.css"
      integrity="sha384-Xi8rHCmBmhbuyyhbI88391ZKP2dmfnOl4rT9ZfRI7mLTdk1wblIUnrIq35nqwEvC"
      crossorigin="anonymous"
    />
  </Fragment>

  <Fragment slot="header">
    <Header />
  </Fragment>

  <Profile
    avatarLink="/note-profile.png"
    description="知識網是由各個知識區塊互相連結，只有知識並不夠，我們還需要智慧，這樣才是完整的我。"
  />

  <div class="flex flex-col gap-4">
    {
      lastThreeNotes.map(({ Content, ...note }) => (
        <div class="mx-4 p-4 rounded-md border border-slate-200 dark:border-slate-700">
          <div class="flex justify-between align-middle">
            <a class="text-xl font-bold hover:underline" href={`/notes/${note.slug}`}>
              {note.data.title}
            </a>
            <p>{format(note.data.pubDate, 'yyyy/MM/dd')}</p>
          </div>
          {note.data.tags.length > 0 && (
            <div class="mt-4 flex flex-wrap gap-x-2 gap-y-2">
              {note.data.tags.map((tag) => (
                <Tag tag={tag} />
              ))}
            </div>
          )}
          <div class="mt-4">
            <Porse>
              <Content />
            </Porse>
          </div>
        </div>
      ))
    }

    {
      restNotes.map(({ slug, data }) => (
        <div class="mx-4 p-4 rounded-md border border-slate-200 dark:border-slate-700">
          <div class="flex justify-between align-middle">
            <a class="text-xl font-bold hover:underline" href={`/notes/${slug}`}>
              {data.title}
            </a>
            <p>{format(data.pubDate, 'yyyy/MM/dd')}</p>
          </div>
          {data.tags.length > 0 && (
            <div class="mt-4 flex flex-wrap gap-x-2 gap-y-2">
              {data.tags.map((tag) => (
                <Tag tag={tag} />
              ))}
            </div>
          )}
        </div>
      ))
    }
  </div>

  <Fragment slot="footer">
    <Footer />
  </Fragment>
</PageLayout>
